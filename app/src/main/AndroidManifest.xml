<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ezzat.doctoruim">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/main_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <!--<activity-->
            <!--android:name=".View.MainActivity"-->
            <!--android:theme="@style/Theme.AppCompat.NoActionBar" />-->
        <activity
            android:name=".View.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName=".View.MainActivity" />
        <activity
            android:name=".View.HomeActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".View.RequestsActivity"
            android:parentActivityName=".View.HomeActivity" />
        <activity android:name=".View.RequestActivity"
            android:parentActivityName=".View.RequestsActivity"/>

        <activity
            android:name=".View.MessagesActivity"
            android:parentActivityName=".View.HomeActivity" />
        <activity android:name=".View.MessageActivity"
            android:parentActivityName=".View.MessagesActivity"/>
        <activity android:name=".View.DoctorProfileActivity"/>
        <activity android:name=".View.SendMessageActivity"/>
    </application>

</manifest>